@page
@model Assignment1.Pages.AccountModel
@using Microsoft.AspNetCore.Identity
@using Assignment1.Models
@using System.IO
@inject UserManager<ApplicationUser> UserManager
@inject IWebHostEnvironment Environment
@{
    ViewData["Title"] = "Account";
    var user = await UserManager.GetUserAsync(User);
}

@if (user == null)
{
    <h1 class="text-center">Loading</h1>
}
else {
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>Account Information</title>
        <style>
            body {
                font-family: Arial, sans-serif;
                background-color: #f4f6f8;
                margin: 0;
                padding: 0;
            }

            .container {
                max-width: 600px;
                margin: 40px auto;
                background: #ffffff;
                padding: 24px;
                border-radius: 8px;
                box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            }

            .profile {
                text-align: center;
                margin-bottom: 24px;
            }

            .profile img {
                width: 120px;
                height: 120px;
                border-radius: 50%;
                object-fit: cover;
                border: 3px solid #ddd;
            }

            h2 {
                margin-top: 16px;
            }

            .info {
                margin-top: 20px;
            }

            .info-item {
                margin-bottom: 12px;
            }

            .label {
                font-weight: bold;
                display: inline-block;
                width: 160px;
            }

            .description {
                margin-top: 16px;
                padding: 12px;
                background: #f0f2f5;
                border-radius: 6px;
            }
        </style>
    </head>
    <body>

        <div class="container">
            <div class="profile">
                <img src="~/Uploads/@user.Photo" alt="Profile Picture">
                <h2>Account Information</h2>
            </div>

            <div class="info">
                <div class="info-item">
                    <span class="label">Name:</span> @user.FullName
                </div>
                <div class="info-item">
                    <span class="label">Gender:</span> @user.Gender
                </div>
                <div class="info-item">
                    <span class="label">Email:</span> @user.Email
                </div>
                <div class="info-item">
                    <span class="label">Mobile Number:</span> @user.MobileNo
                </div>
                <div class="info-item">
                    <span class="label">Delivery Address:</span> @user.DeliveryAddress
                </div>
                <div class="info-item">
                    <span class="label">Credit Card Number:</span> @user.CreditCardNumber
                </div>

                <div class="description">
                    <strong>Description:</strong>
                    <p>
                        @user.Description
                    </p>
                </div>
            </div>
        </div>

    </body>
    </html>
}